<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %> 
<body>
    <!-- HEADER-->
    <%- include("../partials/header") %>
    <!-- MAIN-->
    <main>
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Estás editando: <i><%= productToEdit.titulo %></i></h2>
                </div>
            </div>
            <div class="col-12">
                <form action="/products/edit/:id/?_method=PUT" method="POST">
                    <div class="row product-detail">
                        <div class="col-12 col-md-6">
                            <label for="titulo" class="form-label">Nombre del producto:</label>
                            <input type="text" id="titulo" name="titulo" placeholder="Ej: Zapatillas Reebok" value="<%= productToEdit.titulo %>" class="form-input">
                        </div>
                        <div class="col-12">
                            <label for="modelo" class="form-label">Modelo:</label>
                            <input type="text" id="modelo" name="modelo" value="<%= productToEdit.modelo%>" placeholder="Edite el modelo" class="form-input">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="price" class="form-label">Precio del producto:</label>
                            <input type="number" id="precio" name="precio" value="<%= productToEdit.precio%>" placeholder="Ej: 5678" class="form-input">
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="discount" class="form-label">Descuento:</label>
                            <input type="number" id="descuento" name="descuento" placeholder="Ej: 15" value="<%= productToEdit.descuento %>" class="form-input">
                        </div>
                        <div class="col-12">
                            <label for="cuotas" class="form-label">Cuotas:</label>
                            <input type="number" id="cuotas" name="cuotas" value="<%= productToEdit.cuotas%>" placeholder="Edite cuotas" class="form-input">
                        </div>
                        <div class="col-12">
                            <label for="cuotas" class="form-label">Categorias:</label>
                            <input type="number" id="categoria" name="categoria" value="<%= productToEdit.categoria%>" placeholder="Edite categoria" class="form-input">
                        </div>
                        <div class="col-12">
                            <label for="cuotas" class="form-label">sub-categorias:</label>
                            <input type="number" id="subCategoria" name="subCategoria" value="<%= productToEdit.subCategoria%>" placeholder="Edite sub-categoria" class="form-input">
                        </div>
                        <div class="col-12">
                            <label for="description" class="form-label">Descripción:</label>
                            <textarea name="descripcion" id="descripcion" class="form-input"><%= productToEdit.descripcion %></textarea>
                        </div>
                        <div class="col-12">
                            <label for="image" class="form-label">Imagen:</label>
                            <input type="file" id="imagen" name="imagen" value="<%= productToEdit.imagen%>" class="form-input">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="buy-now-button">Editar producto</button>
                        </div>
                    </div>
                </form>
            </div>
    
        </div>

    </main>
    <!-- FOOTER-->
    <%-include("../partials/footer")%>
</body>
</html>