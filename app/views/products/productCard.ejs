<!DOCTYPE html>
<html lang="es">

    <%- include("../partials/head") %>

<body>

    <%- include("../partials/header") %>
      <!-- SALE -->
   
    <main class="product-card">
        <div class="main-container">

            <div class="cart-container">
                <h1>mi carrito</h1>
                <div class="containerHF">
                    <div class="cart-container__tab-panel">
                        <% products.forEach(producto => { %>
                        <section class="item-row">
                            <article class="item--cart">
                                <div class="photo-container">
                                    <a href="/admin/adminProducts/<%= producto.id %>">
                                        <img class="photo" src="/images/products/<%= producto.imagen ? producto.imagen.nombre : 'default-image.png' %>" alt="">
                                    </a>
                                </div>
                                <div class="a">
                                    <div class="description">
                                        <div>
                                            <p><%= producto.titulo%></p>
                                            <br>
                                            <div class="precio">
                                                <h2>
                                                    $<%= toThousand(producto.precio/producto.cuotas)%>
                                                </h2>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn-close" aria-label="Close"><i class="fa-solid fa-trash"></i></button>
                                    </div>
                                    <div class="item--cart__selecter--from">
                                        <div class="boton">
                                            <button type="submit" class="boton--resta">
                                                <span>-</span>
                                            </button>
                                            <div>
                                                <span>1</span>
                                            </div>
                                            <button type="submit" class="boton--suma">
                                                <span>+</span>
                                            </button>
                                        </div>
                                        <div class="precio--final">
                                            <h2>
                                                $<%= toThousand(producto.precio/producto.cuotas)%>
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </section>
                        <div class="separator"></div>
                        <% }) %>
                    </div>
                    <div class="cart-container__footer-container">
                            <div class="cart-container__footer-container--title">
                                <h2>Seleccion la zona de entrega o envio</h2>
                            </div>
                            <div class="cart-container__footer-container--delivery">
                                <div class="cart-container__footer-container--delivery--send">
                                    <button type="submit" class="icon">
                                        <i class="fa-sharp fa-solid fa-truck"></i>
                                    </button>
                                    <div class="sub-title">
                                        <h4>
                                            Envio a domicilio
                                        </h4>
                                    </div>
                                </div>
                                <div class="cart-container__footer-container--delivery--in--story">
                                    <button type="submit" class="icon">
                                        <i class="fa-sharp fa-solid fa-store"></i>
                                    </button>
                                    <div class="sub-title">
                                        <h4>
                                            Retirar en tienda
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <div class="cart-container__footer-container--title">
                                <h2>Resumen</h2>
                            </div>
                            <div class="cart-container__footer-container--ticket">
                                <div class="tickek--row fondo">
                                    <div class="ticket--row__concepts">
                                        <h6>Precio de mis productos</h6>
                                    </div>
                                    <div class="ticket--row__NUMBER">
                                        <h5>$9999</h5>
                                    </div>
                                </div>
                                <div class="tickek--row">
                                    <div class="ticket--row__concepts">
                                        <h6>ENVIOS</h6>
                                    </div>
                                    <div class="ticket--row__NUMBER delivery">
                                        <h5>$9999</h5>
                                    </div>
                                </div>
                                <div class="tickek--row fondo">
                                    <div class="ticket--row__concepts">
                                        <h6>TOTAL:</h6>
                                    </div>
                                    <div class="ticket--row__NUMBER">
                                        <h5>$9999</h5>
                                    </div>
                                </div>
                                <button type="submit" class="btn">Comprar</button>
                                <button type="submit" class="btn">Seguir comprando</button>
                            </div>
    
                            <div class=" cart-container__footer-container--credit__card">
                                <div class="titulo">
                                    <h5>
                                        Medios de pagos:
                                    </h5>
                                </div>
                                <div class="mediosDePago">
                                    <ul class="cart-container__footer-container--credit__card--cards">
                                        <li>
                                            <img src="/images/visa.jpg" alt="Visa">
                                        </li>
                                        <li>
                                            <img src="/images/master-card.jpg" alt="Mastercard">
                                        </li>
                                        <li>
                                            <img src="/images/cash.jpg" alt="Efectivo">
                                        </li>
                                    </ul>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <section class="contai">
        <%- include("../partials/slider")%> 
    </section>



    <%- include("../partials/footer") %>
    <!-- JavaScript -->
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    <script src="/js/productslider.js"></script>

</body>

</html>