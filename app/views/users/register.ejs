<!DOCTYPE html>
<html lang="es">

    <%- include("../partials/head") %>
    
<body>

    <%- include("../partials/header") %>

    <main class="register">
        <div class="img-container">
            <img src="/images/AR-Knight2.png" alt="">
        </div>
        <div class="form-container">
            <h1 class="title">REGISTRATE</h1>
            <hr>
            <form action="/users/" method="POST" enctype="multipart/form-data">
                <div class="form">
                    <div class="input-container">
                        <label for="id"></label>
                        <input class="input-style" type="text" id="name" name="name" placeholder="Ingrese su Nombre">
                        <% if (locals.errors && errors.name) { %>
                            <small class="text-danger"><%= errors.name.msg %> </small>
                        <% } %>
                    </div>
                    <div class="input-container">
                        <label for="apellido"></label>
                        <input class="input-style" type="text" id="apellido" name="apellido" placeholder="Ingrese su Apellido">
                        <% if (locals.errors && errors.apellido) { %>
                            <small class="text-danger"><%= errors.apellido.msg %> </small>
                        <% } %>
                    </div>
                    <div class="input-container">
                        <label for="email"></label>
                        <input class="input-style" type="email" name="email" id="email" placeholder="Ingrese su email">
                        <% if (locals.errors && errors.email) { %>
                            <small class="text-danger"><%= errors.email.msg %> </small>
                        <% } %>
                    </div>
                    <div class="input-container">
                        <label for="password"></label>
                        <input class="input-style" type="password" id="password" name="password" placeholder="Ingrese su contraseña">
                        <% if (locals.errors && errors.password) { %>
                            <small class="text-danger"><%= errors.password.msg %> </small>
                        <% } %>
                    </div>
                    <div class="input-container">
                        <label for="password2"></label>
                        <input class="input-style" type="password" name="password2" placeholder="Re-ingrese su contraseña">
                        <% if (locals.errors && errors.password2) { %>
                            <small class="text-danger"><%= errors.password2.msg %> </small>
                        <% } %>
                    </div>
                    <div class="avatarFile">
                        <p>Agregar foto</p>
                        <input type="file" name="avatar">
                    </div>
                    <div class="check">
                        <input type="checkbox" name="terms" id="recordar"> 
                        <label for="terms">  Acepto los <a href="">términos y condiciones</a> </label>
                        <% if (locals.errors && errors.terms) { %>
                            <small class="text-danger"><%= errors.terms.msg %> </small>
                        <% } %>
                    </div>
                    <div class="submit-container">
                        <div class="button-container">
                            <button type="reset" class="agregarAlCarrito">Cancelar</button>
                        </div>
                        <div class="button-container">
                            <button type="submit" class="agregarAlCarrito">Registrarme</button>
                        </div>
                    </div>
                    <span><a href="/users/login">Ya tengo cuenta</a></span>
                     
                </div>
                
            </form>
        </div>
    </main>

    <%- include("../partials/footer") %>

</body>
</html>

