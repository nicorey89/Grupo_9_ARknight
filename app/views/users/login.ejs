<!DOCTYPE html>
<html lang="es">

    <%- include("../partials/head") %>
    
<body>

    <%- include("../partials/header") %>

    <main class="login">
        <div class="login-container">
            <form action="/users/login" method="post" class="container" id="form">
                <h1 class="title">INGRESAR</h1>
                <hr>                    
                <div class="formEdit">
                    <input type="email" name="email" placeholder="Ingrese su email" id="email">
                    <small id="emailErrors"></small>
                    <% if (locals.errors && errors.email) { %>
                        <small class="text-danger" ><%= errors.email.msg %> </small>
                    <% } %>
                </div>
                <div class="formEdit">
                    <input type="password" name="password" placeholder="Ingrese su contraseña" id="password">
                    <small id="passwordErrors"></small>
                    <% if (locals.errors && errors.password) { %>
                        <small class="text-danger" ><%= errors.password.msg %> </small>
                    <% } %>
                </div>
                <div class="check">
                    <input type="checkbox" name="recordar" id="recordar"> 
                    <label for="recordar">  Recordarme </label>
                </div>
                <button type="submit" class="agregarAlCarrito" id="submit">Ingresar</button>
                <span><a href="">¿Olvidaste tu contraseña?</a></span>
                <span><a href="/users/register">Aún no tengo cuenta</a></span>
            </form>
          </div>
          <div class="img-container">
            <img src="/images/AR-Knight2.png" alt="">
          </div>
    </main>

    <%- include("../partials/footer") %>
    <script src="/js/login.js"></script>
</body>
</html>



